<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<UserSecretsId>127be20a-4581-41d9-895d-cf50e53772c9</UserSecretsId>
		<DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
		<DockerfileContext>.</DockerfileContext>
		<IsPackable>true</IsPackable>
	</PropertyGroup>

	<ItemGroup>
		<None Include="**/*.cs" Pack="true" PackagePath="" />
		<None Include="**/*.csproj" Pack="true" PackagePath="" />
		<None Include="*.json" Pack="true" PackagePath="" />
		<None Include="*.http" Pack="true" PackagePath="" />
		<None Include="Dockerfile" Pack="true" PackagePath="" />
		<None Include=".template.config\template.json" Pack="true" PackagePath=".template.config/" />
	</ItemGroup>
	
	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.9" />
		<PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.22.1" />
	</ItemGroup>

</Project>
